<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnButtonContainer"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/card_complete"
    android:visibility="gone">

    <Button
        android:id="@+id/btSend"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:paddingLeft="13dp"
        android:gravity="left|center_vertical"
        android:text="@string/tracking_done"
        android:textColor="@color/card_title"
        android:background="@drawable/selector" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/separator_card"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <ImageButton
        android:id="@+id/btAddMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_new"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:background="@drawable/selector" />
</LinearLayout>